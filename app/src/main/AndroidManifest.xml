<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rosel.roselsalesapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".RoselApplication"
        android:allowBackup="true"
        android:icon="@mipmap/rosel_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ProductsListActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"
                android:value=".ProductsListActivity" />
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".SearchProductActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".ProductsListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ProductsListActivity" />
        </activity>
        <activity
            android:name=".ProductDetailActivity"
            android:parentActivityName=".ProductsListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ProductsListActivity" />
        </activity>
        <activity
            android:name=".OrderDetailsActivity"
            android:screenOrientation="sensorPortrait"

            android:parentActivityName=".OrdersListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".OrdersListActivity" />
        </activity>
        <activity
            android:name=".OrdersListActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".ClientsListActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"
                android:value=".ClientsListActivity" />
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ClientDetailActivity"
            android:parentActivityName=".ClientsListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ClientsListActivity" />
        </activity>
        <activity
            android:name=".SyncActivity"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".InformationActivity"
            android:parentActivityName=".SettingsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SettingsActivity" />
        </activity>
        <activity
            android:name=".DatabaseActivity"
            android:parentActivityName=".SettingsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SettingsActivity" />
        </activity>
        <activity
            android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.HOME"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>