<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_goods_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rosel.roselsalesapp.activity.ProductsListActivity"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <CheckBox
        android:text="@string/show_hidden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_hidden"
        android:onClick="onShowHiddenClick" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/goods_listview"
        android:layout_below="@+id/show_hidden"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textFilterEnabled="true" />
</RelativeLayout>
